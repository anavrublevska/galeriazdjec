{% extends 'base.html.twig' %}

{% block title %}
    {{ 'edit'|trans({'%id%': gallery.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'edit'|trans({'%id%': gallery.id|default('')}) }}</h1>

    {{ form_start(form, { method: 'PUT', action: url('gallery_edit', {id: gallery.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-outline-success" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('galleries_index') }}" class="btn btn-outline-secondary">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}