{% extends 'base.html.twig' %}

{% block title %}
    {{ 'gallery_delete'|trans({'%id%': gallery.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'gallery_delete'|trans({'%id%':  gallery.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('gallery_delete', {id:  gallery.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('galleries_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}