{% extends 'base.html.twig' %}

{% block title %}
    {{ 'edit_comment'|trans({'%id%': comment.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'edit_comment'|trans({'%id%': comment.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('comment_edit', {id: comment.id, photo_id:comment.photo.id }) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input  type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('photo_show', {id: comment.photo.id}) }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}