{% extends 'base.html.twig' %}

{% block title %}
    {{ 'see_this_photo'|trans({'%id%': photo.id|default('')}) }}
{% endblock %}
{% block stylesheets %}

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/photoOne.css') }}">
{% endblock  %}
{% block body %}
    <h1>{{ 'see_this_photo'|trans({'%id%': photo.id|default('')}) }}</h1>
    <div class="center">
        <a class="btn btn-outline-danger" href="{{ url('photo_edit', {'id': photo.id}) }}">{{'edit'|trans}}</a>
        <a class="btn btn-outline-light" href="{{ url('photo_delete', {'id': photo.id}) }}">{{'delete'|trans}}</a>
    </div>
    <a class="btn btn-outline-dark" href="{{ url('photos_index') }}">{{ 'go_back'|trans }}</a>
    {% if is_granted("ROLE_ADMIN")  %}

    {% endif %}
    {% if photo is defined and photo|length %}
        <div>
            <dl>
                <dt class="center">{{ 'label_title'|trans }}</dt>
                <dd class="center">{{ photo.title }}</dd>
                <dt class="center">{{ 'label_description'|trans }}</dt>
                <dd class="center">{{ photo.description }}</dd>

                    <dt class="center">{{ 'label_tags'|trans }}</dt>
                    {% for tags in photo.tags %}
                    <dd class="center"><a href="{{ url('tag_filtration', {'id': tags.id}) }}">{{ tags.title }}</a></dd>
                    {% endfor %}





            </dl>
            <img id="photo" class="center" src="/uploads/photos/{{ photo.link }}" >


        </div>

            {% for comments in photo.comments %}
                    <div id="comments" class="center">
                        <h6 >{{ comments.user.email }}</h6>
                        <p>{{ comments.content }}</p>
                        {% if is_granted("ROLE_ADMIN")  %}
                            <a href="{{ url('comment_delete', {id: comments.id, photo_id: photo.id}) }}">{{'delete'|trans}}</a>
                            <a href="{{ url('comment_edit', {id: comments.id, photo_id: photo.id}) }}">{{'edit'|trans}}</a>
                        {% endif %}


                    </div>

            {% endfor %}
    {% if is_granted(["ROLE_USER"])  %}
            <div id="forma" class="center">
                {{ form_start(form) }}
                {{ form_widget(form) }}

                <div  class="form-group row float-sm-right">
                    <input type="submit" value="{{ 'save'|trans }}" class="btn btn-light">
                </div>

                {{ form_end(form) }}
            </div>

    {% endif %}





    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}