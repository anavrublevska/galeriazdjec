{% extends 'base.html.twig' %}

{% block title %}
    {{ 'photo_delete'|trans({'%id%': photo.id|default('')}) }}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/photosForm.css') }}">
{% endblock %}

{% block body %}
    <div>
    <a id="back" href="{{ url('photos_index') }}" class="btn btn-secondary">
        {{ 'action_back_to_list'|trans }}
    </a>
    </div>
    <h1>{{ 'photo_delete'|trans({'%id%': photo.id|default('')}) }}</h1>
    <div id="form">
        {{ form_start(form, { method: 'DELETE', action: url('photo_delete', {id: photo.id}) }) }}
         {{ form_widget(form) }}

        <h3>{{ 'sure?'|trans }}</h3>
        <div id="save" >
            <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-outline-danger" />
        </div>

    </div>

    {{ form_end(form) }}
{% endblock %}