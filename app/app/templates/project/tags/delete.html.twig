{% extends 'base.html.twig' %}
{% block title %}
    {{ 'delete'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'delete'|trans }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('tag_delete', {id:  tag.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('tags_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}