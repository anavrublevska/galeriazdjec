{% extends 'base.html.twig' %}

{% block title %}
    {{ 'edit_password'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    {% if user is defined %}
    <h1>{{ 'edit_password'|trans({'%id%': user.id|default('')}) }}</h1>
    <h3>{{ 'your_email_is'|trans({ '%email%': user.email|default('')}) }}</h3>
    {{ form_start(form, { method: 'PUT', action: url('edit_password', {id: user.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('users_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
    {% endif %}
{% endblock %}