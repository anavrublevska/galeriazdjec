<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">

    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    {% endblock %}
</head>

<body>


    {% block nav %}
        <nav  class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Fancy&Photos</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                {% if is_granted("ROLE_USER") %}
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('galleries_index') }}">{{'Galleries'|trans}}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('photos_index') }}">{{'photos'|trans}}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('photo_create') }}">{{'photo_create'|trans}}</a>
                        </li>
                        {% if is_granted("ROLE_ADMIN") %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('tags_index') }}">{{'tags_index'|trans}}</a>
                        </li>
                        {% endif %}
                    </ul>
                    <span class="navbar-text">

            </span>
                {% endif %}

            </div>
            {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                <div>{{ app.user.email }}</div>
                <div>
                    <a href="{{ url('app_logout') }}">{{ 'action_logout'|trans }}</a>
                </div>
            {% else %}
                <div>
                    <a href="{{ url('app_login') }}">{{ 'action_login'|trans }}</a>
                </div>
            {% endif %}
        </nav>
    {% endblock %}
    <div class="container-fluid">
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}" role="alert">
                    {{ message|trans }}
                </div>
            {% endfor %}
        {% endfor %}

    {% block body %}

    {% endblock %}
</div>

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
